{
    "name": "Python Poetry Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.flake8"
            ]
        }
    },
    "postCreateCommand": "poetry install",
    "remoteUser": "root"
} 